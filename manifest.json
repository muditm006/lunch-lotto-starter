{
    "manifest_version": 3,
    "name": "Lunch Lotto",
    "version": "1.0",
    "description": "A fun lunch recommendation tool with healthy options!",
    "permissions": ["notifications", "storage", "alarms", "geolocation"],
    "host_permissions": ["https://maps.googleapis.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "assets/icon.png"
    },
    "web_accessible_resources": [
    {
    "resources": ["history.html"],
    "matches": ["https://*/*", "http://*/*"]
    }
]
  }
  